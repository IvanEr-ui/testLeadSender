{
    "compilerOptions": {
      "strictNullChecks": true,
      "target": "es6",
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./src", // This must be specified if "paths" is.
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}